    "ts-node": "10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/rimraf": "^3.0.2"
