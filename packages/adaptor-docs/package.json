{
  "name": "@openfn/adaptor-docs",
  "version": "0.0.1",
  "description": "Component for displaying adaptor documentation",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "test:types": "pnpm tsc --noEmit --project tsconfig.json",
    "build:tsup": "tsup --config ./tsup.config.js",
    "build": "rollup -c",
    "build:css": "tsup --config ./tsup-css.config.js",
    "build:watch": "pnpm build --watch",
    "build:clean": "rimraf dist",
    "pack": "pnpm pack --pack-destination ../../dist",
    "export": "sh scripts/export.sh"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Open Function Group <admin@openfn.org>",
  "license": "ISC",
  "dependencies": {
    "@openfn/describe-package": "workspace:^0.0.8",
    "esbuild": "^0.15.14",
    "esbuild-css-modules-plugin": "^2.6.2",
    "esbuild-postcss": "^0.0.4",
    "esbuild-style-plugin": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4"
  },
  "peerDependencies": {
    "react": "16 || 17 || 18",
    "react-dom": "16 || 17 || 18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.19",
    "rimraf": "^3.0.2",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-lib": "^0.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4"
  }
}
