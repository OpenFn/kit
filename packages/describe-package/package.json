{
  "name": "@openfn/describe-package",
  "version": "0.1.2",
  "description": "Utilities to inspect an npm package.",
  "author": "Open Function Group <admin@openfn.org>",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./worker": {
      "import": {
        "types": "./dist/worker/index.d.ts",
        "default": "./dist/worker.js"
      }
    }
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "pnpm ava",
    "test:watch": "pnpm ava -w",
    "clean": "rimraf dist",
    "build:worker": "tsm esbuild-worker.ts",
    "build:node": "tsup --config tsup.config.js src/index.ts",
    "build": "pnpm clean && pnpm build:node && pnpm build:worker",
    "pack": "pnpm pack --pack-destination ../../dist",
    "cli": "npx tsx src/cli.ts"
  },
  "keywords": [],
  "devDependencies": {
    "@openfn/language-common": "2.0.1",
    "@types/node": "^18.15.13",
    "@types/node-localstorage": "^1.3.0",
    "@types/rimraf": "^3.0.2",
    "ava": "5.3.1",
    "esbuild": "^0.18.14",
    "rimraf": "^3.0.2",
    "threads": "1.7.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.0",
    "tsm": "^2.2.1",
    "tsup": "^7.2.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "typesVersions": {
    "*": {
      "worker": [
        "dist/worker/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@typescript/vfs": "^1.3.5",
    "cross-fetch": "^3.1.5",
    "typescript": "^5.1.6",
    "url-join": "^5.0.0"
  }
}
